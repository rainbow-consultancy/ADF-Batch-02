{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "adf-rainbow"
		},
		"LS_ADLS_GEN2_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'LS_ADLS_GEN2'"
		},
		"LS_AZURE_SQL_DB_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'LS_AZURE_SQL_DB'"
		},
		"LS_ONPREM_SQL_SERVER_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'LS_ONPREM_SQL_SERVER'"
		},
		"LS_ADLS_GEN2_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://rainbowstorageadls.dfs.core.windows.net/"
		},
		"LS_AZURE_SQL_DB_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "rainbow-server.database.windows.net"
		},
		"LS_AZURE_SQL_DB_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "rainbow-db"
		},
		"LS_AZURE_SQL_DB_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "rainbow-user"
		},
		"LS_ONPREM_SQL_SERVER_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "SandeepReddy"
		},
		"LS_ONPREM_SQL_SERVER_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "AdventureWorks2025"
		},
		"LS_ONPREM_SQL_SERVER_properties_typeProperties_userName": {
			"type": "string",
			"defaultValue": "rainbow-user2"
		},
		"EventTrigger_properties_PL_EVENT_TRIGGER_parameters_TriggerFileName": {
			"type": "string",
			"defaultValue": "@triggerBody().fileName"
		},
		"EventTrigger_properties_PL_EVENT_TRIGGER_parameters_TriggerSourceFolder": {
			"type": "string",
			"defaultValue": "@triggerBody().folderPath"
		},
		"EventTrigger_properties_typeProperties_scope": {
			"type": "string",
			"defaultValue": "/subscriptions/55a823ff-3572-4afe-84f3-2631597109ef/resourceGroups/rg_rainbow/providers/Microsoft.Storage/storageAccounts/rainbowstorageadls"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "adf-rainbow_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"LS_ADLS_GEN2_accountKey": {
						"value": "[parameters('LS_ADLS_GEN2_accountKey')]"
					},
					"LS_AZURE_SQL_DB_password": {
						"value": "[parameters('LS_AZURE_SQL_DB_password')]"
					},
					"LS_ONPREM_SQL_SERVER_password": {
						"value": "[parameters('LS_ONPREM_SQL_SERVER_password')]"
					},
					"LS_ADLS_GEN2_properties_typeProperties_url": {
						"value": "[parameters('LS_ADLS_GEN2_properties_typeProperties_url')]"
					},
					"LS_AZURE_SQL_DB_properties_typeProperties_server": {
						"value": "[parameters('LS_AZURE_SQL_DB_properties_typeProperties_server')]"
					},
					"LS_AZURE_SQL_DB_properties_typeProperties_database": {
						"value": "[parameters('LS_AZURE_SQL_DB_properties_typeProperties_database')]"
					},
					"LS_AZURE_SQL_DB_properties_typeProperties_userName": {
						"value": "[parameters('LS_AZURE_SQL_DB_properties_typeProperties_userName')]"
					},
					"LS_ONPREM_SQL_SERVER_properties_typeProperties_server": {
						"value": "[parameters('LS_ONPREM_SQL_SERVER_properties_typeProperties_server')]"
					},
					"LS_ONPREM_SQL_SERVER_properties_typeProperties_database": {
						"value": "[parameters('LS_ONPREM_SQL_SERVER_properties_typeProperties_database')]"
					},
					"LS_ONPREM_SQL_SERVER_properties_typeProperties_userName": {
						"value": "[parameters('LS_ONPREM_SQL_SERVER_properties_typeProperties_userName')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "adf-rainbow_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2024-03-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"EventTrigger_properties_PL_EVENT_TRIGGER_parameters_TriggerFileName": {
						"value": "[parameters('EventTrigger_properties_PL_EVENT_TRIGGER_parameters_TriggerFileName')]"
					},
					"EventTrigger_properties_PL_EVENT_TRIGGER_parameters_TriggerSourceFolder": {
						"value": "[parameters('EventTrigger_properties_PL_EVENT_TRIGGER_parameters_TriggerSourceFolder')]"
					},
					"EventTrigger_properties_typeProperties_scope": {
						"value": "[parameters('EventTrigger_properties_typeProperties_scope')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'adf-rainbow_ArmTemplate_0')]"
			]
		}
	]
}