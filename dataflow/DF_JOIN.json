{
	"name": "DF_JOIN",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_ADLS_SOURCE_CSV",
						"type": "DatasetReference"
					},
					"name": "SourcePerson"
				},
				{
					"dataset": {
						"referenceName": "DS_ADLS_SOURCE_CSV",
						"type": "DatasetReference"
					},
					"name": "SourcePersonPhone"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_DATAFLOW_CSV_SAMPLE",
						"type": "DatasetReference"
					},
					"name": "SinkJoinedPerson"
				}
			],
			"transformations": [
				{
					"name": "JoinPerson"
				},
				{
					"name": "DervieFullName"
				},
				{
					"name": "SelectFinalColumns"
				}
			],
			"scriptLines": [
				"source(output(",
				"          BusinessEntityID as short,",
				"          PersonType as string,",
				"          NameStyle as boolean,",
				"          Title as string,",
				"          FirstName as string,",
				"          MiddleName as string,",
				"          LastName as string,",
				"          Suffix as string,",
				"          EmailPromotion as short,",
				"          AdditionalContactInfo as string,",
				"          Demographics as string,",
				"          rowguid as string,",
				"          ModifiedDate as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SourcePerson",
				"source(output(",
				"          BusinessEntityID as short,",
				"          PhoneNumber as string,",
				"          PhoneNumberTypeID as short,",
				"          ModifiedDate as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> SourcePersonPhone",
				"SourcePerson, SourcePersonPhone join(SourcePerson@BusinessEntityID == SourcePersonPhone@BusinessEntityID,",
				"     joinType:'left',",
				"     matchType:'exact',",
				"     ignoreSpaces: false,",
				"     broadcast: 'auto')~> JoinPerson",
				"JoinPerson derive(PersonFullName = concat(FirstName, ' ', LastName)) ~> DervieFullName",
				"DervieFullName select(mapColumn(",
				"          BusinessEntityID = SourcePerson@BusinessEntityID,",
				"          PersonType,",
				"          Title,",
				"          PERSON_FULL_NAME = PersonFullName,",
				"          EmailPromotion,",
				"          rowguid,",
				"          PhoneNumber,",
				"          ModifiedDate = SourcePerson@ModifiedDate",
				"     ),",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true) ~> SelectFinalColumns",
				"SelectFinalColumns sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['PersonJoined'],",
				"     truncate: true,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> SinkJoinedPerson"
			]
		}
	}
}