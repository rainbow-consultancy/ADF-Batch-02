{
	"name": "DF_SAMPLE",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "DS_ADLS_SOURCE_CSV",
						"type": "DatasetReference"
					},
					"name": "Person"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "DS_DATAFLOW_CSV_SAMPLE",
						"type": "DatasetReference"
					},
					"name": "OutputPerson"
				}
			],
			"transformations": [
				{
					"name": "GroupByType"
				}
			],
			"scriptLines": [
				"source(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> Person",
				"Person aggregate(groupBy(PersonType),",
				"     Count = count(\"BusinessEntityID\")) ~> GroupByType",
				"GroupByType sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['Person'],",
				"     truncate: true,",
				"     umask: 0022,",
				"     preCommands: [],",
				"     postCommands: [],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> OutputPerson"
			]
		}
	}
}